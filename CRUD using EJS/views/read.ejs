<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reading Users</title>
    <link rel="stylesheet" href="/stylesheets/read.css">
</head>
<body>
    <main>
        <a href="/">Back to Home</a>
        <h2>All Users</h2>
        <div class="users">
            <% users.forEach(user => { %>
            <div class="user">
                    <div class="img">
                    <img src="<%= user.image %>" alt="">
                </div>
                <h3><%= user.name %></h3>
                <h5><%= user.email %></h5>
                <div class="buttons">
                    <a href="/update/<%= user._id %>">Edit User</a>
                    <a href="/delete/<%= user._id %>">Delete User</a>
                </div>
            </div>
            <% }) %>
            
        </div>
    </main>
</body>
</html>